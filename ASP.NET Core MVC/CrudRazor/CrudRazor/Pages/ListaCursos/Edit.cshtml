@page
@model CrudRazor.Pages.ListaCursos.EditModel
@{
    ViewData["Title"] = "Edit";
}

<br />
<h2 class="text-info">Editar Curso</h2>

<div class="border">
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Curso.Id" />

        <div class="container" style="padding:30px;">
            <div class="form-group">

                <div class="row">
                    <div class="col-sm-4">
                        <label asp-for="Curso.NombreCurso"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Curso.NombreCurso" class="form-control" />
                    </div>
                    <span asp-validation-for="Curso.NombreCurso" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-sm-4">
                        <label asp-for="Curso.Cantidad"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Curso.Cantidad" class="form-control" />
                    </div>
                    <span asp-validation-for="Curso.Cantidad" class="text-danger"></span>
                </div>


                <div class="row">
                    <div class="col-sm-4">
                        <label asp-for="Curso.Precio"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Curso.Precio" class="form-control" />
                    </div>
                    <span asp-validation-for="Curso.Precio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-4 offset-sm-4">
                            <input type="submit" value="Editar" class="btn btn-primary" />
                        </div>
                        <div class="col-sm-4">
                            <a asp-page="Index" class="btn btn-success">Volver a lista</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

